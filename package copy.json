{
  "name": "cosmic-collector-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Cosmic Collector - Multi-game blockchain gaming platform on Hedera",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "compile:force": "hardhat compile --force",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:token": "hardhat run scripts/deploy/1-deploy-token.js --network hederaTestnet",
    "deploy:nft": "hardhat run scripts/deploy/2-deploy-nft.js --network hederaTestnet",
    "deploy:marketplace": "hardhat run scripts/deploy/3-deploy-marketplace.js --network hederaTestnet",
    "deploy:treasury": "hardhat run scripts/deploy/4-deploy-treasury.js --network hederaTestnet",
    "deploy:leaderboard": "hardhat run scripts/deploy/5-deploy-leaderboard.js --network hederaTestnet",
    "deploy:all": "hardhat run scripts/deploy/6-deploy-all.js --network hederaTestnet",
    "hedera:token": "node scripts/hedera/createHTSToken.js",
    "hedera:nft": "node scripts/hedera/createHTSNFT.js",
    "hedera:topics": "node scripts/hedera/createHCSTopics.js",
    "verify": "hardhat verify --network hederaTestnet"
  },
  "keywords": [
    "hedera",
    "blockchain",
    "gaming",
    "nft",
    "smart-contracts"
  ],
  "author": "John Kenechukwu (Asmodeus) for Cosmic Collector Team",
  "license": "MIT",
  "dependencies": {
    "@hashgraph/sdk": "^2.51.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@nomicfoundation/ignition-core": "^0.15.14",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@openzeppelin/hardhat-upgrades": "^3.2.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.7",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.14.10",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^5.1.2",
    "ethers": "^6.13.1",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.5.3"
  }
}
